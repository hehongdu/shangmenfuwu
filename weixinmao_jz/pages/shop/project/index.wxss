/* weixinmao_jz/pages/shop/project/index.wxss */
.header{
  height: 50rpx;
  display: flex;
  justify-content: center;
  background:red;
}


.black{
  position: fixed;
}

.content{
  padding-bottom: 20rpx;
}

.projectList{
  width: 94%;
  margin:20rpx auto 0;
  background:white;
  height: 250rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  box-shadow:0px 0px 10px black
}

.projectImg{
  margin-left:20rpx;
  width: 35%;
  height: 80%;
  background:red;
}

.projectTxt{
  width: 45%;
  height: 80%;
  color:gray;
  margin-left:40rpx;
  display: flex;
  flex-wrap: wrap;
}

.project_name{
  width: 100%;
}

.money{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.project_describe{
  width: 100%;
}

.add{
  position: fixed;
  z-index: 99;
  bottom: 30rpx;
  width: 100%;
  height: 100rpx;
  background:white;
  display: flex;
  justify-content: center;
  align-items: center;
}