.container {
    background-color: #FFF;
    min-height: 100%;
}

.header {
    width: 750rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
.jieduan {
    width:100%; 
    overflow:hidden; 
    text-overflow:ellipsis; 
    white-space:nowrap;
  }
.header .search {
    width: 650rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 5rpx;
    background: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.header .search view {
    color: #a6a6a6;
    font-size: .7rem;
    align-self: center;
}

.header .search icon {
    margin-right: 30rpx;
    margin-top: 18rpx;
}

.swiper-container {
    width: 750rpx;
    position: relative;
    margin-top: 10rpx;
}

.swiper_box {
    width: 100%;
    height: 362.5rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 362.5rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    border-radius: 50%;
    transition: all .6s;
    opacity: .5;
}

.swiper-container .dots .dot.active {
    width: 14rpx;
    opacity: 1;
}

.weui-grids {
    position: relative;
    overflow: hidden;
}

.weui-grids:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 0.1rpx;
    border-top: 0rpx solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.weui-grids:after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 0.1rpx;
    bottom: 0;
    border-left: 0rpx solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}

.weui-grid {
    position: relative;
    float: left;
    padding: 40rpx 20rpx;
    width: 33.33333333%;
    box-sizing: border-box;
}

.weui-grid:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 0.1rpx;
    bottom: 0;
    border-right: 0rpx solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 100% 0;
    transform: scaleX(0.5);
}

.weui-grid:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 0.1rpx;
    border-bottom: 0rpx solid #ebebeb;
    color: #D9D9D9;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.weui-grid:active {
    background-color: #ECECEC;
}

.weui-grid__icon {
    width: 160rpx;
    height: 160rpx;
    margin: 0 auto;
}

.weui-grid__icon image {
    display: block;
    width: 100%;
    height: 100%;
}

.weui-grid__icon+.weui-grid__label {
    margin-top: 10rpx;
}

.weui-grid__label {
    display: block;
    text-align: center;
    color: #000000;
    font-size: .8rem;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.flexs {
    display: flex;
    align-items: center;
    justify-content: center;
}
.goodsList {
    flex-wrap: wrap;
    justify-content: left;
    padding: 40rpx 30rpx;
}
  
.goodsList .goods_box {
    width: 335rpx;
    margin: 0 0 20rpx;
    border-radius: 20rpx;
    padding:0 0 30rpx;
}
  
.goodsList .goods_box .imgBox {
    width: 335rpx;
    height: 335rpx;
    border-radius: 20rpx;
    overflow: hidden;
    background: center center /cover;
}
.goodsList .goods_box .imgBox .hotImg{
    width: 100rpx;
    left: 0;
    top: 0;
    z-index: 99;
}
  
  
.goodsList .goods_box:nth-child(2n) {
    margin-left: 20rpx;
}
  
.goodsList .goods_box .imgBox image {
    width: 100%;
}
  
.goodsList .goods_box .title {
    line-height: 36rpx;
    padding: 52rpx 20rpx 50rpx;
    height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    align-items: center;
    justify-content: center;
}
.goodsList .goods_box view text {
    color: #42BE9C;
    font-size: 30rpx;
}