.swiper-container {
    width: 95%;
    position: relative;
    margin:0 auto;
    margin-bottom: 25rpx;
}

.swiper_box {
    width: 100%;
    height: 362.5rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 362.5rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    border-radius: 50%;
    transition: all .6s;
    opacity: .5;
}

.swiper-container .dots .dot.active {
    width: 14rpx;
    opacity: 1;
}

.navlist {
    width: 750rpx;
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    padding-top: 30rpx;
    flex-wrap: wrap;
    background: #FFF;
}

.navlist .item {
    width: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: .7rem;
    padding-bottom: 30rpx;
}

.navlist .item image {
    width: 120rpx;
    height: 120rpx;
}

.navlist .item>view {
    margin-top: 10rpx;
    color: #6e6d6b;
}

